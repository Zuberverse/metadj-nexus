# Pre-commit hook: Run quality checks before allowing commit
# Exits with non-zero status to abort commit if any check fails

echo "ğŸ” Running pre-commit quality checks..."

# Run lint check (zero warnings enforced)
echo "ğŸ“ Checking code style (ESLint)..."
npm run lint || exit 1

# Run type check
echo "ğŸ”¤ Checking types (TypeScript)..."
npm run type-check || exit 1

echo "âœ… All pre-commit checks passed!"
